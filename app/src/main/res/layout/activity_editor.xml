<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- name of item/s -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the item"/>
    <EditText
        android:id="@+id/edit_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- quantity of the items -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity of the products"/>
    <EditText
        android:id="@+id/edit_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <!-- price of the single item -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price of the single product"/>
    <EditText
        android:id="@+id/edit_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- image upload -->
    <TextView
        android:id="@+id/edit_item_image_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to upload the image"/>

</LinearLayout>